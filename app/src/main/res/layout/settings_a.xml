<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_a">

    <android.support.design.widget.NavigationView
        android:id="@+id/navItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_items">
    </android.support.design.widget.NavigationView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/txtNewEmail"
            android:layout_width="270dp"
            android:layout_height="43dp"
            android:layout_marginEnd="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="192dp"
            android:background="@drawable/transparentboxb"
            android:ems="10"
            android:hint="johndoe@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColorHint="#728aa5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtBalance2"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="87dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="158dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="40dp"
            android:gravity="right"
            android:text="5,000.00"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBack11"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnCancel3"
            android:layout_width="127dp"
            android:layout_height="34dp"
            android:layout_marginEnd="52dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="52dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/nobtn"
            android:onClick="cmdCancel"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.722"
            app:layout_constraintStart_toEndOf="@+id/btnUpdate"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword3" />

        <EditText
            android:id="@+id/txtPassword3"
            android:layout_width="270dp"
            android:layout_height="43dp"
            android:layout_marginBottom="248dp"
            android:layout_marginEnd="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginStart="29dp"
            android:background="@drawable/transparentboxb"
            android:ems="10"
            android:hint="****"
            android:inputType="textPassword"
            android:onClick="cmdUpdate"
            android:padding="8dp"
            android:textColorHint="#728aa5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/btnBack7"
            android:layout_width="55dp"
            android:layout_height="44dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:onClick="Navigate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/transparent" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="127dp"
            android:layout_height="34dp"
            android:layout_marginEnd="21dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="21dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/yesbtn"
            android:onClick="cmdUpdate"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/btnCancel3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword3" />
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.DrawerLayout>