<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_c">

    <android.support.design.widget.NavigationView
        android:id="@+id/navItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_items">
    </android.support.design.widget.NavigationView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/txtCity1"
            android:layout_width="130dp"
            android:layout_height="43dp"
            android:layout_marginBottom="116dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="56dp"
            android:background="@drawable/transparentboxb"
            android:ems="10"
            android:hint="Sta. Rosa"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="#728aa5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtProvince1"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnCancel5"
            android:layout_width="127dp"
            android:layout_height="34dp"
            android:layout_marginBottom="56dp"
            android:layout_marginEnd="56dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="56dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/nobtn"
            android:onClick="cmdCancel"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnUpdate2" />

        <EditText
            android:id="@+id/txtlName"
            android:layout_width="130dp"
            android:layout_height="43dp"
            android:layout_marginEnd="56dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="56dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/transparentboxb"
            android:ems="10"
            android:hint="Doe"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColorHint="#728aa5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtmName"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnBack9"
            android:layout_width="43dp"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:onClick="Navigate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/transparent" />

        <EditText
            android:id="@+id/txtfName"
            android:layout_width="270dp"
            android:layout_height="43dp"
            android:layout_marginEnd="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="184dp"
            android:background="@drawable/transparentboxb"
            android:ems="10"
            android:hint="John"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColorHint="#728aa5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtBalance4"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="87dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="158dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="40dp"
            android:gravity="right"
            android:text="5,000.00"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBack11"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtProvince1"
            android:layout_width="130dp"
            android:layout_height="43dp"
            android:layout_marginBottom="116dp"
            android:layout_marginEnd="58dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="58dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/transparentboxb"
            android:ems="10"
            android:hint="Laguna"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="#728aa5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtCity1" />

        <Button
            android:id="@+id/btnUpdate2"
            android:layout_width="127dp"
            android:layout_height="34dp"
            android:layout_marginBottom="56dp"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="56dp"
            android:background="@drawable/yesbtn"
            android:onClick="cmdUpdate"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCancel5"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtAddress1"
            android:layout_width="270dp"
            android:layout_height="43dp"
            android:layout_marginBottom="184dp"
            android:layout_marginEnd="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginStart="29dp"
            android:background="@drawable/transparentboxb"
            android:ems="10"
            android:hint="123 ABC Bldg."
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:textColorHint="#728aa5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtmName"
            android:layout_width="130dp"
            android:layout_height="43dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/transparentboxb"
            android:ems="10"
            android:hint="Fero"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColorHint="#728aa5"
            app:layout_constraintEnd_toStartOf="@+id/txtlName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.DrawerLayout>