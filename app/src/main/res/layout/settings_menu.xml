<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settingsbg">

    <android.support.design.widget.NavigationView
        android:id="@+id/navItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_items">
    </android.support.design.widget.NavigationView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnChangeEmail"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginEnd="46dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="46dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="152dp"
            android:background="@drawable/rounded_rect_btn"
            android:onClick="cmdChangeEmail"
            android:text="Change Email Address"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtBalance1"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="87dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="158dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="40dp"
            android:gravity="right"
            android:text="5,000.00"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBack11"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button11"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginEnd="46dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="46dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_rect_btn"
            android:onClick="cmdUpdateInfo"
            android:text="Update Information"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button10" />

        <Button
            android:id="@+id/button10"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginEnd="46dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="46dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_rect_btn"
            android:onClick="cmdChangePassword"
            android:text="Change Password"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnChangeEmail" />

        <ImageView
            android:id="@+id/btnBack6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:onClick="Navigate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/transparent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.DrawerLayout>