<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/consumer_signup">

    <android.support.design.widget.NavigationView
        android:id="@+id/navItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_items">
    </android.support.design.widget.NavigationView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/txtPassword2"
            android:layout_width="270dp"
            android:layout_height="43dp"
            android:layout_marginEnd="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/transparentboxw"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColorHint="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUsername2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="16dp"
            android:text="Already have an account?"
            android:textColor="@android:color/background_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cmdCreateAccount" />

        <TextView
            android:id="@+id/cmdLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="104dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="104dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:onClick="BackLogin"
            android:text="Log In."
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/cmdCreateAccount" />

        <EditText
            android:id="@+id/txtConfirmPass"
            android:layout_width="270dp"
            android:layout_height="43dp"
            android:layout_marginEnd="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/transparentboxw"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColorHint="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword2" />

        <Button
            android:id="@+id/cmdCreateAccount"
            android:layout_width="220dp"
            android:layout_height="42dp"
            android:layout_marginEnd="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginStart="54dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/button"
            android:onClick="CreateAccount"
            android:text="Create My Account"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtConfirmPass" />

        <EditText
            android:id="@+id/txtUsername2"
            android:layout_width="270dp"
            android:layout_height="43dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="141dp"
            android:background="@drawable/transparentboxw"
            android:ems="10"
            android:hint="Username"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/txtEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.057" />
    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.DrawerLayout>